<div class="card-subscription">
  <div class="card-subscription-left">
    <div class="card-subscription-top-left">
      <div class="card-subscription-operator">
        <h3><%= subscription.operator.name %></h3>
      </div>
      <div class="card-subscription-frequency">
        <p><%= subscription.frequency %></p>
      </div>
    </div>
    <div class="card-subscription-bottom-left">
      <div class="card-subscription-price">
        <h2>6,99â‚¬</h2>
      </div>

<!--       Display trend icon depending on last transactions variation -->
      <% if trend? %>
        <% direction = up_or_down(subscription) %>
        <% image_tag("arrow_#{direction}.png", class: "card-subscription-trend") %>
      <% end %>
    </div>
  </div>
  <div class="card-subscription-right">
    <img src="https://res.cloudinary.com/dpnte3nr8/image/upload/v1559739406/n26_l6turg.png" alt="logo" class="card-subscription-logo">
    <div class="card-subscription-date">
      <p><strong>4</strong>mai</p>
    </div>
  </div>
</div>


